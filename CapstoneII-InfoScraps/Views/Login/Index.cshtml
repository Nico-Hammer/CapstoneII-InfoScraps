@model CapstoneII_InfoScraps.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="is-auth-container">
    <div class="is-auth-card">
        <h1>Login</h1>
        <form asp-controller="Login" asp-action="Login" method="post">
            <fieldset>
                <div class="is-form-group">
                    <label class="is-form-label" for="Username">Username</label>
                    <input type="text" asp-for="Username" class="is-form-input" placeholder="Enter your username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="is-form-group">
                    <label class="is-form-label" for="Password">Password</label>
                    <input type="password" asp-for="Password" class="is-form-input" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </fieldset>
            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
            {
                <div class="is-alert is-alert-error">@ViewData["ErrorMessage"]</div>
            }
            <button type="submit" class="is-btn is-btn-primary" style="width: 100%; margin-top: var(--space-md);">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
