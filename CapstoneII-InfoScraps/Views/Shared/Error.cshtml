@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="is-error-page">
    <div class="is-error-code">Error</div>
    <h2 class="is-error-title">Something went wrong</h2>
    <p class="is-error-description">An error occurred while processing your request.</p>

    @if (Model.ShowRequestId)
    {
        <p style="color: var(--gray-500); font-size: 0.85rem;">
            <strong>Request ID:</strong> <code style="color: var(--accent-cyan);">@Model.RequestId</code>
        </p>
    }

    <div class="is-page-actions" style="margin-top: var(--space-xl);">
        <a class="is-btn is-btn-primary" asp-controller="Home" asp-action="Index">Go Home</a>
        <a class="is-btn is-btn-secondary" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
    </div>
</div>
